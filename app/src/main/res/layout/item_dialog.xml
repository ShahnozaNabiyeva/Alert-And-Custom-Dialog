<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Ogohlantirish"
        android:gravity="center"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/itemText1"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/itemText2"
        android:layout_marginTop="13dp"

        app:layout_constraintTop_toBottomOf="@id/itemText1"
        android:gravity="center"
        android:textStyle="italic"
        android:textColor="@color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="17sp"
        android:text="Siz ushba ma'lumotlarni rostdan ham o'chirmoqchimisiz?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <Button
        android:id="@+id/btnCancel"
        app:layout_constraintTop_toBottomOf="@id/itemText2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="BEKOR QILISH"

        android:layout_marginStart="10dp"
        android:layout_marginTop="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/btnDelete"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="13dp"

        android:text="O'CHIRISH"
        app:layout_constraintTop_toBottomOf="@id/itemText2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>